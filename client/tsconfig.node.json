// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "server.ts",
    "src/backend/**/*.ts",
    "scripts/**/*.ts"
  ]
}
